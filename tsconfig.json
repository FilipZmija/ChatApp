{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "Bundler",
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "noPropertyAccessFromIndexSignature": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
